#include <stdio.h>
#include <sys/types.h>
#include <unistd.h>

int main() {
  pid_t pid = fork();
  if (pid != 0) { // parent
    printf("PARENT\n");
    execl("/bin/ls", "/bin/ls", "-a", "-l", "-h", NULL);
  } else {
    printf("CHILD\n");
    execl("/bin/ls", "/bin/ls", "-a", NULL);
  }
  printf("pid: %d\n", getpid());
}
